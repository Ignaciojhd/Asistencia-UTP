<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/imgEstudiante"
        android:src="@drawable/utp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgEstudiante"
        android:textSize="18dp"
        android:text="Herramientas de Programacion Aplicada IV"
        android:id="@+id/lblAsignatura"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgEstudiante"
        android:textSize="15dp"
        android:text="1IL141"
        android:id="@+id/lblGrupo"
        android:layout_below="@id/lblAsignatura"
        android:textColor="@color/black"/>




</RelativeLayout>